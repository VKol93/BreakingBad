<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/characterNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="24dp" />

    <ImageView
        android:id="@+id/characterImage"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/characterNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="104dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/occupationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/characterNameTextView"
        app:layout_constraintStart_toEndOf="@+id/characterImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="101dp" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/characterImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/occupationTextView"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="134dp" />

    <TextView
        android:id="@+id/nicknameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statusTextView"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/characterImage"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="173dp" />

    <TextView
        android:id="@+id/seasonAppearanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/nicknameTextView"
        app:layout_constraintStart_toEndOf="@+id/characterImage"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="238dp" />
</androidx.constraintlayout.widget.ConstraintLayout>